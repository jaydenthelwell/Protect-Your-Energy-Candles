<div class="login-session d-flex flex-row align-items-center justify-content-between">
  <div class="flex-grow-1 d-flex flex-column justify-content-center align-items-center login-card">
    <h2 class="login-title mb-5">Login to your account</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "") do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-box w-100 mt-2", placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "text-box w-100 mt-2", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field d-flex justify-content-between gap-3">
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <div>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          </div>
        </div>
      <% end %>

      <div class="actions text-center">
        <%= f.submit "Log in", class: "login-button w-100"%>
      </div>
    <% end %>
    <p class="bottom mt-5">Dont have an account? <%= link_to "Sign up now", new_registration_path(resource_name) %></p>
  </div>
  <div class="login-photo">
    <%= image_tag("blossom-flowers.png") %>
  </div>
</div>
