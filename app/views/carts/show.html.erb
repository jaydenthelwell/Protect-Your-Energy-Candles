<p style="color: green"><%= notice %></p>
<%= render @cart %>

<div class="container">
  <h1>Shopping Cart</h1>

  <% @cart.line_items.each do |item| %>
  <div class="d-flex justify-space-between">
    <%= item.candle.scent %>

    <%= form_for(item, url: line_item_path(item), method: :patch, html: { class: 'quantity-form' }) do |form| %>
      <div class="quantity-adjust">
        <%= form.button '-', name: 'quantity_adjust', value: 'decrease', class: 'quantity-adjust-btn' %>
        <%= form.text_field :quantity, class: 'quantity-input', size: item.quantity.to_s.length, style: "text-align: center;" %>
        <%= form.button '+', name: 'quantity_adjust', value: 'increase', class: 'quantity-adjust-btn' %>
      </div>
    <% end %>

      <%= number_to_currency(item.candle.price * item.quantity, unit: 'Â£') %>
      <%= link_to 'Remove', line_item_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
  <% if @cart.line_items.empty? %>
    <p>!You have not added any items to your shopping bag</p>
  <% end %>
<%# <%= link_to 'Proceed to Checkout', checkout_cart_path, class: 'btn btn-primary' %>
</div>
